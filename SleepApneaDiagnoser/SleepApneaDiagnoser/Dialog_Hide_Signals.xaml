<mtr:MetroWindow x:Class="SleepApneaDiagnoser.Dialog_Hide_Signals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SleepApneaDiagnoser"
        mc:Ignorable="d"
        xmlns:mtr="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Hide/Unhide Signals" Height="240" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <TextBlock TextWrapping="WrapWithOverflow" Height="34" VerticalAlignment="Top" Margin="10,10,10,0">
            Please select the signals you would like to show in the signals selection pane.
        </TextBlock>
        <ListBox x:Name="listBox_Signals" SelectionMode="Multiple" Margin="10,49,10,40"/>
        <Button x:Name="button_Done" Content="Done" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="20" RenderTransformOrigin="1.188,0.643" Click="button_Done_Click" HorizontalAlignment="Right" Width="64"/>

    </Grid>
</mtr:MetroWindow>
