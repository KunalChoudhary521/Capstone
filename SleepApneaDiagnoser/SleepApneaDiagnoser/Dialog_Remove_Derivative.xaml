<Dialog:CustomDialog x:Class="SleepApneaDiagnoser.Dialog_Remove_Derivative"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SleepApneaDiagnoser"
        mc:Ignorable="d"
        xmlns:mtr="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"    
        Title="Remove Derivative">
    <Grid>
        <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Margin="0,10,10,0">
            Please select the derivative(s) you would like to remove from the preview list.
        </TextBlock>

        <Button x:Name="button_Cancel" Content="Cancel" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" VerticalAlignment="Bottom" Click="button_Cancel_Click"/>
        <Button x:Name="button_OK" Content="OK" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Click="button_OK_Click" VerticalAlignment="Bottom"/>
        <ListBox x:Name="listBox_DerivedSignals" SelectionMode="Multiple" Margin="10,50,10,50" MaxHeight="200"/>
    </Grid>
</Dialog:CustomDialog>
